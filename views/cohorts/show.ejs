<%- include('../partials/header') %>
<div class="container d-flex justify-content-center mt-4">
    <div class="card mb-3 mt-3" style="width: 35rem;">
        <div class="card-body d-flex justify-content-center" style="width:35rem">
            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    <h2 class="card-title">
                        <%= data.name_of_team %>
                    </h2>
                    <p class="card-text">
                        <%= data.name_of_members %>
                    </p>
                </li>
                <li class="list-group-item">
                    <form action="/cohorts/<%= data.id %>" method="get">
                        <h6>Method</h6>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="radio" value="team">
                            <label class="form-check-label" for="team">
                                Team Count
                            </label><br>
                            <input class="form-check-input" type="radio" name="radio" value="member">
                            <label class="form-check-label" for="member">
                                Number per Team
                            </label>
                        </div>
                    <h6 class="mt-4">Quantity</h6>
                        <div class="input-group mb-3">
                            <input type="number" name="number" class="form-control" placeholder="Quantity" aria-label="Username" aria-describedby="basic-addon1">
                        </div>
                        <div class="text-center">
                            <button class="btn btn-outline-primary">Assign Teams</button>    
                        </div>
                    </form>
                    <% if (final) {%>
                        <ol class="list-group list-group-numbered list-group-flush mt-3">
                            <% for (let i of final) {%>
                                <li class="list-group-item"><%= i %></li>
                            <% } %>
                        </ol>
                    <% } %>
                </li>
            </ul>
        </div>
        <div class="card-footer">
            <a class="btn btn-warning float-end" href="/cohorts/<%=  data.id %>/edit">Edit Post</a>
            <form class="float-start" action="/cohorts/<%=  data.id %>" method="POST">
                <input type="hidden" name="_method" value="DELETE">
                <input type="submit" class="btn btn-danger" value="Delete"/>
            </form></div>
    </div>
    </div>
</div>
<%- include('../partials/footer') %>