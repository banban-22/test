<%- include('../partials/header') %>

<div class="container">
  <h1 class="mt-3">Edit</h1>
  <form action="/cohorts/<%= id %>" method="POST">
    <input type="hidden" name="_method" value="PATCH">
    <div class="form-group my-3">
      <label for="logo_url">Logo Url</label>
      <input
        type="url"
        id="logo_url"
        name="logo_url"
        class="form-control"
        value="<%= logo_url %>"
      />
    </div>

    <div class="form-group">
      <label for="name_of_team">Name of Team</label>
      <input
        type="text"
        id="name_of_team"
        name="name_of_team"
        class="form-control mb-3"
       value="<%=name_of_team%>"
      />
    </div>

    <div class="form-group">
      <label for="name_of_members">Name of Members</label>
      <textarea
        name="name_of_members"
        id="name_of_members"
        cols="30"
        rows="10"
        class="form-control mb-3"
        value="<%=name_of_members%>"
        
      ></textarea>
    </div>
    <input type="submit" value="Edit post" class="btn btn-success">
  </form>
</div>
<%- include('../partials/footer') %>