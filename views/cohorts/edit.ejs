<%- include('../partials/header') %>

<div class="container">
  <h1 class="mt-3">Edit Team and Members</h1>
  <form action="/cohorts/<%= id %>" method="POST">
    <div class="form-group my-3">
      <input type="hidden" name="_method" value="PATCH" />
      <label for="logo_url">Logo Url</label>
      <input
        type="url"
        id="logo_url"
        name="logo_url"
        class="form-control"
        value="<%= url %>"
        placeholder="e.g. http://wwww.example.com/something"
      />
    </div>

    <div class="form-group">
      <label for="name_of_team">Name of Team (required)</label>
      <input
        type="text"
        id="name_of_team"
        name="name_of_team"
        class="form-control mb-3"
        value="<%= team %>"
        placeholder="Flying Funks"
      />
    </div>

    <div class="form-group">
      <label for="name_of_members">Name of Members (required)</label>
      <textarea
        name="name_of_members"
        id="name_of_members"
        cols="30"
        rows="10"
        class="form-control mb-3"
        value="<%= members %>"
        placeholder="Jon Snow, Daenerys, Meilsandre, Arya Stark"
      ></textarea>
    </div>

    <div class="text-right">
      <button type="submit" value="submit" class="btn btn-outline-primary">
        Submit
      </button>
    </div>
  </form>
</div>
<%- include('../partials/footer') %>
